{% extends "BamlChatBundle::layout.html.twig" %}

{% block baml_chat_body %}
  <div id="conversation">
  <select class="selectpicker" id="liste_conversation" name="liste_conversation" data-style="btn-success">
        {% for conversation in conversations %}
            <option value="{{conversation.id}}">{{ conversation.title }}</option>
        {% endfor %}
  </select>
<a href="{{path('baml_chat_new_conversation')}}" class="btn btn-primary" id="bouton_add_conversation"><span class="glyphicon glyphicon-plus"></span></a>
</div> <br/>
{% endblock %}
